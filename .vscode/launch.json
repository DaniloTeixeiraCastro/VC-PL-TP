{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Executar Moedas (CMake)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/CMakeBuild/moedas.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/CMakeBuild",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
      "preLaunchTask": "build-cmake-moedas",
      "setupCommands": [
        {
            "description": "Habilitar formatação para gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
        }
      ]
    }
  ]
}